@model IEnumerable<LightAndLensCL.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(user.FullName ?? "N/A")</td>
                <td>@(user.Email ?? "N/A")</td>
                <td>@(user.PhoneNumber?.ToString() ?? "N/A")</td>
                <td>@(user.Role?.RoleName ?? "Unassigned")</td>

                <td>
                    
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New User</a>


