@model LightAndLensCL.Models.User

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Delete User</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this user?</h4>
    <p>This will remove both the system account and user record.</p>
</div>

<div class="mb-3">
    <strong>Full Name:</strong> @Model.FullName <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Role:</strong> @Model.Role?.RoleName ?? "Unknown"
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
