@model List<LightAndLens.WebApp.Models.RentalTransactionViewModel>
@{
    ViewData["Title"] = "Rental Transactions";
}

<h2>Rental Transactions</h2>

<form method="get" class="row g-3 mb-4" id="filterForm">
    <!-- Status Filter -->
    <div class="col-md-3">
        <label>Status</label>
        <select name="status" class="form-select">
            <option value="">All</option>
            <option value="Ongoing">Ongoing</option>
            <option value="Overdue">Overdue</option>
        </select>
    </div>

    <!-- Start Date -->
    <div class="col-md-3">
        <label>Start Date From</label>
        <input type="date" name="startDate" class="form-control" />
    </div>

    <!-- End Date -->
    <div class="col-md-3">
        <label>End Date To</label>
        <input type="date" name="endDate" class="form-control" />
    </div>

    <!-- Filter Button -->
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>

    <!-- Clear Filters -->
    <div class="col-md-1 d-flex align-items-end">
        <a href="@Url.Action("Index", "RentalTransactions")" class="btn btn-secondary w-100">Clear</a>
    </div>
</form>

<div class="mb-3">
    <input type="text" class="form-control" id="searchBox" placeholder="Search equipment or customer..." />
</div>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Equipment</th>
            <th>Customer</th>
            <th>Start</th>
            <th>End</th>
            <th>Fee ($)</th>
            <th>Deposit ($)</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.RentalId</td>
                <td>@rental.EquipmentName</td>
                <td>@rental.CustomerName</td>
                <td>@rental.StartDate.ToShortDateString()</td>
                <td>@rental.EndDate.ToShortDateString()</td>
                <td>@rental.RentalFee.ToString("F2")</td>
                <td>@rental.DepositPaid.ToString("F2")</td>
                <td>
                    <span class="badge bg-@(rental.Status == "Overdue" ? "danger" : "success")">
                        @rental.Status
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

