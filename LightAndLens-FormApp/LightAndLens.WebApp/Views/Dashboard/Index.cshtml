<h2>Dashboard</h2>

<!-- KPI Cards Row -->
<div class="row text-center mb-4">
    <div class="col-lg-2 col-md-4 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-header">Total Equipment</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalEquipment</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-header">Active Rentals</div>
            <div class="card-body">
                <h4 class="card-title">@Model.ActiveRentals</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 mb-3">
        <div class="card text-white bg-success">
            <div class="card-header">Pending Requests</div>
            <div class="card-body">
                <h4 class="card-title">@Model.PendingRequests</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 mb-3">
        <div class="card text-white bg-danger">
            <div class="card-header">Overdue Returns</div>
            <div class="card-body">
                <h4 class="card-title">@Model.OverdueReturns</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-4 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-header">Under Maintenance</div>
            <div class="card-body">
                <h4 class="card-title">@Model.UnderMaintenance</h4>
            </div>
        </div>
    </div>
</div>

<!-- Tabs and Progress Bars -->
<div class="row">
    <!-- Recent Activity Tabs -->
    <div class="col-lg-8">
        <h3 class="mt-4">Recent Activity</h3>

        <ul class="nav nav-tabs mt-3" id="activityTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="requests-tab" data-bs-toggle="tab" data-bs-target="#requests"
                        type="button" role="tab" aria-controls="requests" aria-selected="true">
                    Requests
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="rentals-tab" data-bs-toggle="tab" data-bs-target="#rentals"
                        type="button" role="tab" aria-controls="rentals" aria-selected="false">
                    Rentals
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="returns-tab" data-bs-toggle="tab" data-bs-target="#returns"
                        type="button" role="tab" aria-controls="returns" aria-selected="false">
                    Returns
                </button>
            </li>
        </ul>

        <div class="tab-content p-3 border border-top-0" id="activityTabsContent">
            <div class="tab-pane fade show active" id="requests" role="tabpanel" aria-labelledby="requests-tab">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Equipment</th>
                            <th>Rented By</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var req in Model.RecentRequests)
                        {
                            <tr>
                                <td>@req.RequestId</td>
                                <td>@req.EquipmentName</td>
                                <td>@req.RentedBy</td>
                                <td>@req.StartDate.ToShortDateString()</td>
                                <td>@req.EndDate.ToShortDateString()</td>
                                <td>@req.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="rentals" role="tabpanel" aria-labelledby="rentals-tab">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Equipment</th>
                            <th>Rented By</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rental in Model.RecentRentals)
                        {
                            <tr>
                                <td>@rental.RentalId</td>
                                <td>@rental.EquipmentName</td>
                                <td>@rental.RentedBy</td>
                                <td>@rental.StartDate.ToShortDateString()</td>
                                <td>@rental.EndDate.ToShortDateString()</td>
                                <td>@rental.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="returns" role="tabpanel" aria-labelledby="returns-tab">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Equipment</th>
                            <th>Rented By</th>
                            <th>Return Date</th>
                            <th>Condition</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ret in Model.RecentReturns)
                        {
                            <tr>
                                <td>@ret.ReturnId</td>
                                <td>@ret.EquipmentName</td>
                                <td>@ret.RentedBy</td>
                                <td>@ret.ReturnDate.ToShortDateString()</td>
                                <td>@ret.Condition</td>
                                <td>@ret.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Inventory Progress Bars -->
    <div class="col-lg-4">
        <div class="card p-3 rounded-4 shadow-sm">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Inventory Availability</h5>

                <!-- Add User buton left out for now -->
                @* <a asp-controller="Users" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="bi bi-person-plus"></i> Add New User
                </a> *@


            </div>
            @foreach (var item in Model.CategoryStatuses)
            {
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <strong>@item.CategoryName</strong>
                        <small>@item.Available / @item.Total Available</small>
                    </div>
                    <div class="progress">
                        <div class="progress-bar @item.BarColor" role="progressbar"
                             style="width: @item.PercentageAvailable%"
                             aria-valuenow="@item.PercentageAvailable"
                             aria-valuemin="0" aria-valuemax="100">
                            @item.PercentageAvailable%
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


    </div>

    <!-- Analytics Tab -->
    <div class="tab-pane fade" id="analytics" role="tabpanel" aria-labelledby="analytics-tab">
        <h4 class="mb-3">Analytics Dashboard</h4>
        <p>This section will show charts and advanced reports like:</p>
        <ul>
            <li>Requests per status</li>
            <li>Equipment usage by category</li>
            <li>Monthly rental trends</li>
            <li>Top rented items</li>
        </ul>
    </div>

    <!-- Maintenance Tab -->
    <div class="tab-pane fade" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
        <h4 class="mb-3">Equipment Under Maintenance</h4>
        @* <p>This section will list all equipment items flagged as <strong>under maintenance</strong>.</p> *@
        @if (Model.MaintenanceItems.Any())
        {
            <table class="table table-striped table-sm mt-3">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Equipment</th>
                        <th>Category</th>
                        <th>Availability</th>
                        <th>Condition</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MaintenanceItems)
                    {
                        <tr>
                            <td>@item.EquipmentId</td>
                            <td>@item.EquipmentName</td>
                            <td>@item.CategoryName</td>
                            <td>@item.AvailabilityStatus</td>
                            <td>@item.ConditionStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-3">No equipment is currently marked as under maintenance.</div>
        }

    </div>
</div>
