@model LightAndLensCL.Models.Equipment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EquipmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentalPricePerDay)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalPricePerDay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Availability.AvailabilityStatusName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Condition.ConditionName)
        </dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @{
                var mainImage = Model.EquipmentImages?.FirstOrDefault(i => i.IsMain == true);
                if (mainImage != null)
                {
                    <img src="@Url.Content($"~/SharedImages/{mainImage.ImagePath}")" width="200" alt="Equipment Image" />
                }
                else
                {
                    <span>No image available</span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EquipmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
