    <p class="lead mb-4">Your trusted source for camera and equipment rentals.</p>
    <a class="btn btn-primary btn-lg mx-2" asp-controller="Equipment" asp-action="Index">Browse Equipment</a>
    <a class="btn btn-secondary btn-lg mx-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
</div>

