@model LightAndLens.WebApp.Models.NotificationViewModel

@{
    ViewData["Title"] = "Notification Details";
}

<h2>Notification Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Message</dt>
    <dd class="col-sm-10">@Model.Message</dd>

    <dt class="col-sm-2">Is Read</dt>
    <dd class="col-sm-10">@(@Model.IsRead ? "Read" : "Unread")</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back to Notifications</a>
